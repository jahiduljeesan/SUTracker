<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_12sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Vertical guideline for consistent start margin -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".03" />

    <ImageView
        android:id="@+id/btnCall"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_call"
        app:tint="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Call Driver"/>

    <TextView
        android:id="@+id/tvBusName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bus Name"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/btnCall"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/tvRouteName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Route Name"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvBusName"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/btnCall"
        app:layout_constraintHorizontal_bias="0"
        app:layout_goneMarginTop="@dimen/_4sdp" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Heading: Up"
        android:textSize="@dimen/_12sdp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvRouteName"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toStartOf="@id/btnCall"
        app:layout_constraintHorizontal_bias="0"
        app:layout_goneMarginTop="@dimen/_4sdp" />

