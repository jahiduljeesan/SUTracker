<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SUBahon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomSeachView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:textColorHighlight">@color/primary_blue</item>
        <item name="iconTint">@color/primary_blue</item>

    </style>

    <style name="OnboardImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">80dp</item>
    </style>

</resources>